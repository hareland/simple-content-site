{
  "name": "simple-content-site-workspace",
  "description": "A minimal layer for nuxt-content for a simple website with basic functions.",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hareland/simple-content-site.git"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm run playground:dev",
    "dev:prepare": "nuxt prepare layer && nuxt prepare playground/i18n --extends ../../layer",
    "playground:dev": "cd playground/i18n && nuxt dev --extends ../../layer",
    "playground:build": "nuxt build playground/i18n --extends ../../layer",
    "minimal:dev": "cd playground/minimal && nuxt dev --extends ../../layer",
    "minimal:prepare": "nuxt prepare layer && nuxt prepare playground/minimal --extends ../../layer",
    "minimal:build": "nuxt build playground/minimal --extends ../../layer",
    "lint": "eslint .",
    "typecheck": "nuxt typecheck layer",
    "layer:release": "release-it --config .release-it.layer.json && cd layer && npm publish",
    "release": "pnpm run layer:release && release-it"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/eslint-config": "^1.9.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "eslint": "^9.37.0",
    "nuxt": "4.1.3",
    "release-it": "^19.0.5",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.1"
  },
  "resolutions": {
    "nuxi": "3.28.0"
  },
  "packageManager": "pnpm@10.18.3"
}
